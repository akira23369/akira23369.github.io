/* Everforest Inspired Code Highlight */
.highlight
    color: #d3c6aa  // 基础文字色（浅米黄）
    background: #2d353b  // 主背景色（石板青）
    padding: 1.2rem
    border-radius: 6px
    border: 1px solid #475259  // 边框增强层次感
    .code
        /* 注释 */
        .comment,
        .quote
            color: #859289  // 苔藓灰
            font-style: italic

        /* 关键字 */
        .keyword,
        .selector-tag,
        .meta-keyword
            color: #7fbbb3  // 浅水绿色

        /* 字符串 */
        .string,
        .template-string,
        .attr-value
            color: #a7c080  // 青柠绿

        /* 数字/布尔值 */
        .number,
        .boolean,
        .literal
            color: #d699b6  // 浅粉紫色

        /* 函数/方法 */
        .function,
        .title.class_
            color: #dbbc7f  // 琥珀色

        /* 变量/参数 */
        .variable,
        .params
            color: #83c092  // 竹绿色

        /* 类型/类名 */
        .type,
        .class-title
            color: #e69875  // 陶土橙

        /* 操作符 */
        .operator,
        .punctuation
            color: #859289  // 与注释同色系但略深

        /* HTML/XML标签 */
        .tag,
        .name
            color: #7fbbb3  // 与水绿色关键字呼应

        /* 属性名 */
        .attr-name
            color: #d699b6  // 与数字同色系

        /* 正则表达式 */
        .regexp
            color: #e67e80  // 珊瑚红

        /* 特殊符号 */
        .symbol
            color: #d699b6  // 浅粉紫色

        /* 错误提示 */
        .deletion
            background: #543a48  // 深紫红背景
            color: #e67e80

        /* 新增内容 */
        .addition
            background: #3d4a3e  // 深绿背景
            color: #a7c080

        /* 强调样式 */
        .emphasis
            font-style: italic
        .strong
            font-weight: bold
            color: #e69875  // 强调色使用陶土橙

        /* 控制台输出 */
        .console
            color: #83c092  // 竹绿色

        /* CSS特殊处理 */
        .css
            .attribute
                color: #dbbc7f  // CSS属性使用琥珀色
            .selector-class
                color: #7fbbb3