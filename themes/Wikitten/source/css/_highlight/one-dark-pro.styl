/* VS Code Dark+ Inspired Theme */
.highlight
    color: #d4d4d4
    background: #1e1e1e
    padding: 1em
    border-radius: 4px
    overflow: auto
    .code
        /* Comments */
        .comment,
        .quote
            color: #6A9955
            font-style: italic

        /* Keywords */
        .keyword,
        .selector-tag,
        .doctag
            color: #569CD6

        /* Strings */
        .string,
        .subst
            color: #CE9178

        /* Numbers */
        .number,
        .literal
            color: #B5CEA8

        /* Functions */
        .function,
        .title
            color: #DCDCAA

        /* Variables */
        .variable,
        .template-variable
            color: #9CDCFE

        /* Types/Classes */
        .type,
        .class .title
            color: #4EC9B0

        /* Parameters */
        .params
            color: #C586C0

        /* Operators */
        .operator,
        .punctuation
            color: #d4d4d4

        /* HTML Tags */
        .tag,
        .name,
        .attr
            color: #808080

        /* Attributes */
        .attribute
            color: #9CDCFE

        /* Built-in */
        .built_in,
        .builtin-name
            color: #4EC9B0

        /* Regex */
        .regexp
            color: #D16969

        /* Important */
        .strong
            font-weight: bold
            color: #569CD6

        /* Emphasis */
        .emphasis
            font-style: italic

        /* Diff additions/removals */
        .addition
            color: #B5CEA8
            background: rgba(155, 185, 85, 0.2)

        .deletion
            color: #CE9178
            background: rgba(255, 0, 0, 0.2)

        /* Selection highlight */
        ::selection
            background: #264F78